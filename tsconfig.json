{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "vite.config.ts",
    "App.tsx",
    "sw.js",
    "app/home.tsx",
    "app/(tabs)/messages.tsx",
    "app/messages/[did].tsx",
    "components/*.tsx",
    "components/messages",
    "components/post/PostActionsModal.tsx",
    "components/post/PostStats.tsx",
    "components/post/QuotedPost.tsx"
  ]
}
